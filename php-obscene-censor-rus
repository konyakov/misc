$s = preg_replace( "/[^a-zA-ZА-Яа-я0-9\s]/", '', $str );

$match = array();
$low_str = strtolower($s);
array_walk($curse_words, function($val, $key) use (&$match, $low_str) {
    if (($pos = strrpos($low_str, $val)) !== FALSE)  {
        $match[$pos] = $val;
    }
});
if (count($match) > 0) {
	//говно обнаружено
	return true;
} else {
	//говно не обнаружено
	return false;
}

